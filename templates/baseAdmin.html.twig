                        label: '<i class="fa fa-times"></i> Cancelar',
                        className: 'btn-danger'
                    }
                },
                callback: function (result) {
                    if (result) {
                        window.location.href = url
                    }
                }
            });
        })

        $(document).on('click', '.elementRemove', function () {

            let url = $(this).data('url')
            bootbox.confirm({
                message: "¿Está seguro que desea realizar la acción?",
                buttons: {
                    confirm: {
                        label: '<i class="fa fa-check"></i> Confirmar',
                        className: 'btn-primary'
                    },
                    cancel: {
                        label: '<i class="fa fa-times"></i> Cancelar',
                        className: 'btn-danger'
                    }
                },
                callback: function (result) {
                    if (result) {
                        window.location.href = url
                    }
                }
            });
        })

        $(document).on('click', '.modalDetailAction', function () {
            let title = $(this).data('title')
            HoldOn.open({
                theme: "sk-bounce",
                message: 'Por favor espere...',
                textColor: "white"
            });
            $.get($(this).data('url'),
                function (data) {
                    $('#modalDetail').modal('show')
                    $('#modalDetailLabel').text(title)
                    $('.modalDetailBody').html(data)
                    HoldOn.close()
                });
        })


        $(".nav-link-menu").toArray().forEach(e => {

            let href = $(e).attr('href')

            {#console.log('hrefff', href)#}
            {#console.log('path', '{{ app.request.pathinfo }}')#}

            if ('{{ app.request.pathinfo }}'.includes(href)) {
                $($(e)).addClass('active')
                if ($($(e).parent().parent()).hasClass('nav-treeview')) {
                    $($(e).parent().parent().parent()).addClass('menu-open')
                    $($(e).parent().parent().parent().children()).addClass('active')
                }
            }
        })

        function loadNotifications() {

            //Load Notificaciones
            $.ajax({
                type: "POST",
                cache: false,
                url: "{{ path('app_notificaciones_usuario') }}",
                dataType: "html",
                success: function (res) {

                    $('#notificacionesContainer').html(res)
                    $('.cantidadNotificacionesBadge').text($('.cantidadContainer').text())

                },
                error: function (err) {

                    toastr.error(err);
                }
            });

        }

        loadNotifications();

        setInterval(function () {
            loadNotifications()
        }, 2500);

        $(document).on('click', '.notificationRemove', function (e) {
            e.preventDefault()

            setTimeout(function () {
                $('.nbtn').click()

            }, 1)

            $.ajax({
                type: "GET",
                cache: false,
                url: $(this).data('url'),
                dataType: "html",
                success: function (res) {
                    // $('.nd').addClass('show')
                    loadNotifications()
                    $(".tooltip").tooltip("hide");

                },
                error: function (err) {

                    toastr.error(err);
                }
            });
        })

        $(".date-time-picker").datetimepicker({
            locale: 'es',
            icons: {
                time: "fa fa-clock",
            }
        });

    })


</script>

{% for message in app.flashes('success') %}
    <script>
        toastr.success("{{ message }}");
    </script>
{% endfor %}

{% for message in app.flashes('error') %}
    <script>
        toastr.error("{{ message }}");
    </script>
{% endfor %}
