<div class="row">
    <div class="col-4">
        <h5 class="mb-0"><b>Nombre:</b> {{ item.nombre }}</h5>
    </div>
    <div class="col-4">
        <h5 class="mb-0"><b>Color:</b>
            <label style="position: absolute; margin-left: 1%; width: 20px; height: 20px; border-radius: 50%; background-color: {{ item.color }}"></label>
        </h5>
    </div>
    <div class="col-4">
        {% if '1' == item.activo %}
            <h5 class="mb-0"><b>Estado:</b> Habilitado</h5>
        {% else %}
            <h5 class="mb-0"><b>Estado:</b> Deshabilitado</h5>
        {% endif %}
    </div>
</div>
