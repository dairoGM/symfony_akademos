                telefono = (typeof element.telefono !== 'undefined') ? `<b> Tel√©fono: </b> ${element.telefono}<br>` : '';

                marker.bindPopup(`${nombre} ${provincia} ${municipio} ${telefono}`)


                return marker;
            }

            function initFullScreem() {
                L.control.fullscreen({
