{% extends 'baseAdmin.html.twig' %}

{% block title %}Adicionar grupo{% endblock %}

{% block body %}
    <div class="card shadow-sm">
        <div class="card-header">
            <h3 class="card-title text-bold text-gray">Adicionar grupo</h3>
        </div>
        <div class="card-body">
            {{ form_start(form) }}
            <div class="row mb-3">
                <div class="col-md-8">
                    {{ form_row(form.nombre) }}
                </div>
                <div class="col-md-4">
                    <div class="form-check form-switch mt-4">
                        {{ form_row(form.activo) }}
                    </div>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-12">
                    {{ form_row(form.descripcion) }}
                </div>
            </div>

            <div class="row mb-4">
                <div class="col-12">
                    {{ form_row(form.estructuras) }}
                </div>
            </div>

            <div class="card-footer" style="display: flex; justify-content: flex-end; align-items: center;">
                <a class="btn btn-danger mr-2 btn-cancel" data-url="{{ path('app_grupo_index') }}"
                   data-title=""
                   data-content="¿Está seguro que desea realizar la acción?" type="button">Cancelar</a>
                <button class="btn btn-primary">Aceptar</button>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}

