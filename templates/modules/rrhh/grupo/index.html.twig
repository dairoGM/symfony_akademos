{% extends 'baseAdmin.html.twig' %}

{% block title %}Grupos{% endblock %}

{% block body %}

    {% include 'pages/modalDetail.html.twig' %}

    <div class="card shadow-sm">
        <div class="card-header">
            <div class="row" style="display: flex; justify-content: space-between; align-items: center">

                <h3 class="card-title text-bold text-gray">Listado de Grupos</h3>
                <a title="Adicionar" class="btn btn-primary mr-2" href="{{ path('app_grupo_registrar') }}"><i
                            class="fa fa-plus"></i>
                </a>

            </div>
        </div>
        <!-- /.card-header -->
        <div class="card-body">
            <table class="table table-bordered table-striped dataTable">
                <thead class="table-custom-header">
                <tr>
                    <th>No.</th>
                    <th>Nombre</th>
                    <th>Descripción</th>
                    <th>Estructuras asignadas</th>
                    <th>Estado</th>
                    <th class="text-center">Opciones</th>
                </tr>
                </thead>
                <tbody>
                {% for item in registros %}
                    <tr>
                        <td style="width: 1%;">{{ loop.index }}</td>
                        <td>{{ item.nombre }}</td>
                        <td>{{ item.descripcion|default('Sin descripción') }}</td>
                        <td class="text-center">{{ item.estructuras|length }}</td>
                        <td style="width: 1%;" class="-text-center">
                            {% if item.activo %}
                                <span class="ms-status -active">Habilitado</span>
                            {% else %}
                                <span class="ms-status">Deshabilitado</span>
                            {% endif %}
                        </td>
                        <td class="text-center">
                            <button title="Detalles" class="btn btn-outline-primary modalDetailAction"
                                    data-url="{{ path('app_grupo_detail', {'id' : item.id}) }}"
                                    data-title="Detalles del grupo">
                                <i class="fa fa-eye"></i>
                            </button>
                            <a title="Modificar" class="btn btn-outline-primary"
                               href="{{ path('app_grupo_modificar', {'id': item.id}) }}">
                                <i class="fa fa-edit"></i>
                            </a>
                            <button title="Eliminar" class="btn btn-outline-danger elementRemove"
                                    data-url="{{ path('app_grupo_eliminar', {'id': item.id}) }}"
                                    {% if item.estructuras|length > 0 %}disabled title="No se puede eliminar - tiene estructuras asignadas"{% endif %}>
                                <i class="fa fa-trash"></i>
                            </button>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        <!-- /.card-body -->
    </div>

{% endblock %}