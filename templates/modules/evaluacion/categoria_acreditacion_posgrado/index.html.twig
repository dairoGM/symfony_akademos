{% extends 'baseAdmin.html.twig' %}

{% block title %}Programas de posgrado{% endblock %}

{% block body %}

    {% include 'pages/modalDetail.html.twig' %}

    <div class="card shadow-sm">
        <div class="card-header">
            <div class="row" style="display: flex; justify-content: space-between; align-items: center">
                <h3 class="card-title text-bold text-gray">Listado de Programas de Posgrado</h3>
                <div style="float: left;padding-right: 1%">
                    <a id="exportExcel" title="Exportar a Excel" class="btn btn-success">
                        <i class="fa fa-file-excel"></i>
                    </a>

                </div>
            </div>
        </div>
        <!-- /.card-header -->
        <div class="card-body">
            <table class="table table-bordered table-striped dataTable">
                <thead class="table-custom-header">
                <tr>
                    <th>No.</th>
                    <th>Organismo</th>
                    <th>Institución</th>
                    <th>Programa</th>
                    <th>Tipo de programa</th>
                    <th>Categoría de acreditación</th>
                    <th>Fecha de emisión</th>
                    <th>Número del pleno</th>
                    <th>Número de acuerdo del pleno</th>
                    <th>Años de vigencia</th>
                    <th class="text-center">Opciones</th>
                </tr>
                <tr>
                    <th></th> <!-- No filter for index -->
                    <th><input type="text" placeholder="Filtrar por Organismo" class="responsive-input"/></th>
                    <th><input type="text" placeholder="Filtrar por Institución" class="responsive-input"/></th>
                    <th><input type="text" placeholder="Filtrar por Programa" class="responsive-input"/></th>
                    <th><input type="text" placeholder="Filtrar por Tipo de programa" class="responsive-input"/></th>
                    <th><input type="text" placeholder="Filtrar por Categoría de acreditación"
                               class="responsive-input"/></th>
                    <th><input type="text" placeholder="Filtrar por Fecha de emisión" class="responsive-input"/></th>
                    <th><input type="text" placeholder="Filtrar por Número del pleno" class="responsive-input"/></th>
                    <th><input type="text" placeholder="Número de acuerdo del pleno" class="responsive-input"/></th>
                    <th><input type="text" placeholder="Años de vigencia" class="responsive-input"/></th>
                    <th></th>

                </tr>
                </thead>
                <tbody>
                {% for item in registros %}
                    <tr>
                        <td width="1%">{{ loop.index }}</td>
                        <td>{{ item.nombre_siglas_organismo | default('') }}</td>
                        <td>{{ item.nombre_siglas | default('') }}</td>
                        <td>{{ item.nombre | default('') }}</td>
                        <td>{{ item.nombreTipoPrograma | default('') }}</td>
                        <td>{{ item.catAcreditacion | default('') }}</td>
                        <td>{{ item.fechaEmision | default('') }}</td>
                        <td>{{ item.numeroPleno | default('') }}</td>
                        <td>{{ item.numeroAcuerdoPleno | default('') }}</td>
                        <td>{{ item.annosVigenciaCategoriaAcreditacion | default('') }}</td>
                        <td width="5%" class="text-center">
                            <a title="Modificar"
                               href="{{ path('app_evaluacion_categoria_acreditacion_posgrado_modificar', {'id': item.id}) }}"
                               class="btn btn-outline-primary"><i
                                        class="fa fa-edit"></i>
                            </a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>

            </table>
        </div>
        <!-- /.card-body -->
    </div>



{% endblock %}


