{% extends 'baseAdmin.html.twig' %}

{% block title %}Programas de pregrado{% endblock %}

{% block body %}

    {% include 'pages/modalDetail.html.twig' %}

    <div class="card shadow-sm">
        <div class="card-header">
            <div class="row" style="display: flex; justify-content: space-between; align-items: center">
                <h3 class="card-title text-bold text-gray">Listado de Programas de Pregrado</h3>
            </div>
        </div>
        <!-- /.card-header -->
        <div class="card-body">
            <table class="table table-bordered table-striped dataTable">
                <thead class="table-custom-header">
                <tr>
                    <th>No.</th>
                    <th>Organismo</th>
                    <th>Institución</th>
                    <th>Programa</th>
                    <th>Tipo de programa</th>
                    <th>Categoría de acreditación</th>
                    <th>Fecha de emisión</th>
                    <th>Número del pleno</th>
                    <th>Número de acuerdo del pleno</th>
                    <th>Años de vigencia</th>
                    <th class="text-center">Opciones</th>
                </tr>
                </thead>
                <tbody>
                {% for item in registros %}
                    <tr>
                        <td width="1%">{{ loop.index }}</td>
                        <td>{{ item.nombre_siglas_organismo | default('') }}</td>
                        <td>{{ item.nombre_siglas | default('') }}</td>
                        <td>{{ item.nombre | default('') }}</td>
                        <td>{{ item.nombre_tipo_programa | default('') }}</td>
                        <td>{{ item.cat_acreditacion | default('') }}</td>
                        <td>{{ item.fecha_emision | default('') }}</td>
                        <td>{{ item.numero_pleno | default('') }}</td>
                        <td>{{ item.numero_acuerdo_pleno | default('') }}</td>
                        <td>{{ item.annos_vigencia_categoria_acreditacion | default('') }}</td>
                        <td width="5%" class="text-center">
                            <a title="Modificar"
                               href="{{ path('app_evaluacion_categoria_acreditacion_pregrado_modificar', {'id': item.id, 'idProgrInst':item.id_progr_inst}) }}"
                               class="btn btn-outline-primary"><i
                                        class="fa fa-edit"></i>
                            </a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>

            </table>
        </div>
        <!-- /.card-body -->
    </div>



{% endblock %}


