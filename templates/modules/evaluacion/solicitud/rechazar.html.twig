{% extends 'baseAdmin.html.twig' %}

{% block title %}Rechazar solicitud{% endblock %}

{% block body %}

    <div class="card shadow-sm">
        <div class="card-header">
            <div class="row" style="display: flex; justify-content: space-between; align-items: center">

                <h3 class="card-title text-bold text-gray">Rechazar solicitud</h3>

            </div>
        </div>
        {{ include('modules/evaluacion/solicitud/detail.html.twig', { 'solicitud': solicitud }) }}
        <!-- /.card-header -->
        {{ form_start(form) }}
        <div class="card-body">
            <div class="row">
                <div class="col-12 col-sm-12 col-md-12 col-lg-12 col-xl-12 form-group">
                    {{ form_label(form.motivoRechazo) }}
                    {{ form_widget(form.motivoRechazo) }}
                    {{ form_errors(form.motivoRechazo) }}
                </div>
            </div>
        </div>
        <div class="card-footer" style="display: flex; justify-content: flex-end; align-items: center;">
            <a class="btn btn-danger mr-2 btn-cancel" data-url="{{ path('app_solicitud_index') }}" data-title=""
               data-content="¿Está seguro que desea realizar la acción?" type="button">Cancelar</a>
            <button id="btn_submit" class="btn btn-primary">Aceptar</button>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}

    {% block javascripts %}
        <script>


            $('#btn_submit').click(function (e) {
                e.preventDefault();

                $('form[name="rechazar_solicitud"]').attr('action', 'rechazar');
                $('form[name="rechazar_solicitud"]').submit();
            })
        </script>
    {% endblock %}
