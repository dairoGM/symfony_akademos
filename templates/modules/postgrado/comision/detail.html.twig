<div class="card">
    <div class="card-body">
        <div class="row">
            <div class="col-6">
                <h5 class="mb-0"><b>Nombre:</b> {{ item.nombre }}</h5>
            </div>
            <div class="col-6">
                {% if '1' == item.activo %}
                    <h5 class="mb-0"><b>Estado:</b> Habilitado</h5>
                {% else %}
                    <h5 class="mb-0"><b>Estado:</b> Deshabilitado</h5>
                {% endif %}
            </div>
        </div>
        <div class="row">
            <div class="col-6">
                <h5 class="mb-0"><b>Descripción:</b> {{ item.descripcion }}</h5>
            </div>
        </div>
    </div>
</div>


<div class="card">

    <div class="card-header">
        <h3 class="card-title font-weight-bold">
            <i class="ion ion-clipboard mr-1"></i>
            Miembros
        </h3>
    </div>
    <div class="card-body">
        <table id="tbl-asociados" class="table table-bordered table-striped dataTable1">
            <thead class="table-custom-header">
            <tr>
                <th>No.</th>
                <th>Foto</th>
                <th>Nombre y apellidos</th>
                <th>Rol en la comisión</th>
            </tr>
            </thead>
            <tbody>
            {% for item in asignadas %}
                <tr>
                    <td style="width: 2%">{{ loop.index }}</td>
                    <td style="width: 3%"><a
                                href="{% if item.miembro.foto != null %}{{ app.request.getSchemeAndHttpHost() }}/uploads/images/personas/{{ item.miembro.foto }} {% else %} /assets/images/usuario.png {% endif %}"
                                target="_blank">
                            <img src="{% if item.miembro.foto != null %}{{ app.request.getSchemeAndHttpHost() }}/uploads/images/personas/{{ item.miembro.foto }}{% else %} /assets/images/usuario.png {% endif %}"
                                 class="img-circle" alt="{{ item.miembro.primerNombre }}"
                                 style="width: 40px;height: 40px; object-fit: cover">
                        </a></td>
                    <td>{{ item.miembro.primerNombre ~ ' ' ~ item.miembro.segundoNombre ~' '~ item.miembro.primerApellido ~ ' ' ~ item.miembro.segundoApellido }}</td>
                    <td>{{ item.rolComision.nombre }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
</div>