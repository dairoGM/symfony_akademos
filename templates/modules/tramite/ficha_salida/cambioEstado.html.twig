{% extends 'baseAdmin.html.twig' %}

{% block title %}Modificar estado de ficha de salida{% endblock %}

{% block body %}

    <div class="card shadow-sm">
        <div class="card-header">
            <div class="row" style="display: flex; justify-content: space-between; align-items: center">

                <h3 class="card-title text-bold text-gray">Modificar estado de ficha de salida</h3>

            </div>
        </div>
        {{ include('modules/personal/persona/partial.html.twig', { 'persona': persona }) }}
        <!-- /.card-header -->
        {{ form_start(form) }}
        <div class="card-body">
            <div class="row">
                <div class="col-12 col-sm-6 col-md-4 col-lg-4 col-xl-4 form-group">
                    {{ form_label(form.estadoFichaSalida) }}
                    {{ form_widget(form.estadoFichaSalida) }}
                    {{ form_errors(form.estadoFichaSalida) }}
                </div>
            </div>
            <div class="row">
                <div class="col-12 col-sm-12 col-md-12 col-lg-12 col-xl-12 form-group">
                    {{ form_label(form.descripcion) }}
                    {{ form_widget(form.descripcion) }}
                    {{ form_errors(form.descripcion) }}
                </div>


            </div>
        </div>
        <div class="card-footer" style="display: flex; justify-content: flex-end; align-items: center;">
            <a class="btn btn-danger mr-2 btn-cancel" data-url="{{ path('app_ficha_salida_index') }}"
               data-title=""
               data-content="¿Está seguro que desea realizar la acción?" type="button">Cancelar</a>
            <button id="btn_submit" class="btn btn-primary">Aceptar</button>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}
{% block javascripts %}
    <script>
  $('#btn_submit').click(function (e){
      e.preventDefault();

      $('form[name="cambio_estado_salida"]').attr('action', 'cambiar_estado');
      $('form[name="cambio_estado_salida"]').submit();
  })

    </script>
{% endblock %}