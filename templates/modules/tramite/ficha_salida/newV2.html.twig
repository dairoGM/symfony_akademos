{% block javascripts %}
    <script>
        $('#btn_aceptar').on('click', function (e) {
            e.preventDefault();
            $('form[name="ficha_salida"]').attr('action', 'registrar-v2');
            $('form[name="ficha_salida"]').submit();
        });


        $('#ficha_salida_fechaSalidaPrevista, #ficha_salida_fechaRegresoPrevista,' +
            ' #ficha_salida_fechaEmisionPasaporte, ' +
            '#ficha_salida_fechaCaducidadPasaporte').datetimepicker({
            format: 'DD/MM/YYYY'
        });

        $('#ficha_salida_pais').on('change', function () {
            if ($(this).val() != "") {
                HoldOn.open({
                    theme: "sk-cube-grid",
                    message: 'Por favor espere...',
                    textColor: "white"
                });
                var url = "{{ path('app_institucion_extranjera_institucion_dado_pais', {'id':'idP'}) }}";
                url = url.replace('idP', $(this).val());
                $.get(url, function (data) {
                    $('#ficha_salida_institucionExtranjera option').remove();
                    $('#ficha_salida_institucionExtranjera').append(new Option('Seleccione', ""));
                    for (var i = 0; i < data.length; i++) {
                        $('#ficha_salida_institucionExtranjera').append(new Option(data[i].nombre, data[i].id));
                    }
                    HoldOn.close()
                });
            }
        });

    </script>
