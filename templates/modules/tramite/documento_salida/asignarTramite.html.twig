{% extends 'baseAdmin.html.twig' %}

{% block title %}Asignar trámites al documento de salida{% endblock %}

{% block body %}

    <div class="card shadow-sm">
        <div class="card-header">
            <div class="row" style="display: flex; justify-content: space-between; align-items: center">

                <h3 class="card-title text-bold text-gray">Asignar trámites al documento de salida</h3>

            </div>
        </div>
        {{ include('modules/personal/persona/partial.html.twig', { 'persona': persona }) }}
        <!-- /.card-header -->
        {{ form_start(form) }}
        <div class="card-body">
            <div class="row">
                <div class="col-12 col-sm-6 col-md-4 col-lg-4 col-xl-4 form-group">
                    {{ form_label(form.tramite) }}
                    {{ form_widget(form.tramite) }}
                    {{ form_errors(form.tramite) }}
                </div>
            </div>
        </div>
        <div class="card-footer" style="display: flex; justify-content: flex-end; align-items: center;">
            <a class="btn btn-danger mr-2 btn-cancel" data-url="{{ path('app_documento_salida_index') }}"
               data-title=""
               data-content="¿Está seguro que desea realizar la acción?" type="button">Cancelar</a>
            <button id="btn_submit" class="btn btn-primary">Aceptar</button>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}
{% block javascripts %}
    <script>
        $('#asignar_tramite_tramite').val({{ tramitesAsociados | raw }}).change();
        $('#btn_submit').click(function (e) {
            e.preventDefault();

            $('form[name="asignar_tramite"]').attr('action', 'asignar_tramite');
            $('form[name="asignar_tramite"]').submit();
        })

    </script>
{% endblock %}