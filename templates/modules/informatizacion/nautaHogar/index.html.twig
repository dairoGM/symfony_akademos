{% extends 'baseAdmin.html.twig' %}

{% block title %}Nauta hogar{% endblock %}

{% block body %}

    {% include 'pages/modalDetail.html.twig' %}

    <div class="card shadow-sm">
        <div class="card-header">
            <div class="row" style="display: flex; justify-content: space-between; align-items: center">

                <h3 class="card-title text-bold text-gray">Listado de nauta hogar</h3>
                <a title="Adicionar" class="btn btn-primary mr-2" href="{{ path('app_nauta_hogar_registrar') }}"><i
                            class="fa fa-plus"></i>
                </a>

            </div>
        </div>

        <div class="card-body">
            <table class="table table-bordered table-striped dataTable">
                <thead class="table-custom-header">
                <tr>
                    <th>No.</th>
                    <th>Estructura</th>
                    <th>Responsable</th>
                    <th>Número de teléfono</th>
                    <th>Servicio contratado</th>
                    <th>Precio</th>
                    <th>Dirección de instalación del servicio</th>
                    <th class="text-center">Opciones</th>
                </tr>
                </thead>
                <tbody>
                {% for item in registros %}
                    <tr>
                        <td width="1%">{{ loop.index }}</td>

                        <td>({{ item.responsable.estructura.estructura.siglas }}) {{ item.responsable.estructura.nombre | default('') }}</td>
                        <td>{{ item.responsable.primerNombre ~ ' ' ~ item.responsable.segundoNombre ~' '~ item.responsable.primerApellido ~ ' ' ~ item.responsable.segundoApellido }}</td>
                        <td>{{ item.numeroTelefono | default('') }}</td>
                        <td>{{ item.servicioContratado.nombre | default('') }}</td>
                        <td>{{ item.precio | default('') }}</td>
                        <td>{{ item.direccionInstalacion | default('') }}</td>

                        <td width="10%" class="text-center">
{#                            <button title="Detalles" class="btn btn-outline-primary modalDetailAction"#}
{#                                    data-url="{{ path('app_nauta_hogar_detail', {'id' : item.id}) }}"#}
{#                                    data-title="Detalles de nauta hogar">#}
{#                                <i class="fa fa-eye "></i>#}
{#                            </button>#}

                            <a title="Modificar" href="{{ path('app_nauta_hogar_modificar', {'id': item.id}) }}"
                               class="btn btn-outline-primary"><i
                                        class="fa fa-edit"></i>
                            </a>

                            <button title="Eliminar" class="btn btn-outline-danger elementRemove"
                                    data-url="{{ path('app_nauta_hogar_eliminar', {'id': item.id}) }}">
                                <i class="fa fa-trash"></i>
                            </button>

                        </td>

                    </tr>
                {% endfor %}
                </tbody>

            </table>
        </div>
        <!-- /.card-body -->
    </div>



{% endblock %}

{% block javascripts %}
    <script>


    </script>
{% endblock %}
