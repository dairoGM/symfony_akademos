{% extends 'baseAdmin.html.twig' %}

{% block title %}Teléfonos celular {% endblock %}

{% block body %}

    {% include 'pages/modalDetail.html.twig' %}

    <div class="card shadow-sm">
        <div class="card-header">
            <div class="row" style="display: flex; justify-content: space-between; align-items: center">

                <h3 class="card-title text-bold text-gray">Listado de teléfonos celulares</h3>
                <a title="Adicionar" class="btn btn-primary mr-2"
                   href="{{ path('app_telefono_celular_registrar') }}"><i
                            class="fa fa-plus"></i>
                </a>

            </div>
        </div>
        <!-- /.card-header -->
        <div class="card-body">
            <table class="table table-bordered table-striped dataTable">
                <thead class="table-custom-header">
                <tr>
                    <th>No.</th>
                    <th>Institución</th>
                    <th>Marca</th>
                    <th>Modelo</th>
                    <th>Sistema Operativo</th>
                    <th>Responsable</th>
                    <th class="text-center">Opciones</th>
                </tr>
                </thead>
                <tbody>
                {% for item in registros %}
                    <tr>
                        <td width="1%">{{ loop.index }}</td>
                        <td>({{ item.estructura.estructura.siglas | default('') }}
                            ) {{ item.estructura.nombre | default('') }}</td>
                        <td>{{ item.marca.nombre  | default('') }}</td>
                        <td>{{ item.modelo.nombre | default('') }}</td>
                        <td>{{ item.sistemaOperativo.nombre | default('') }}</td>
                        <td>{{ item.responsable | default('') }}</td>
                        <td width="20%" class="text-center">
                            <button title="Detalles" class="btn btn-outline-primary modalDetailAction"
                                    data-url="{{ path('app_telefono_celular_detail', {'id' : item.id}) }}"
                                    data-title="Detalles del teléfono celular">
                                <i class="fa fa-eye "></i>
                            </button>

                            <a title="Modificar" href="{{ path('app_telefono_celular_modificar', {'id': item.id}) }}"
                               class="btn btn-outline-primary"><i
                                        class="fa fa-edit"></i>
                            </a>
                            <a title="Responsable"
                               href="{{ path('app_telefono_celular_responsable', {'id': item.id}) }}"
                               class="btn btn-outline-primary"><i
                                        class="fas fa-user"></i>
                            </a>
                            <button title="Eliminar" class="btn btn-outline-danger elementRemove"
                                    data-url="{{ path('app_telefono_celular_eliminar', {'id': item.id}) }}">
                                <i class="fa fa-trash"></i>
                            </button>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>

            </table>
        </div>
        <!-- /.card-body -->
    </div>



{% endblock %}


