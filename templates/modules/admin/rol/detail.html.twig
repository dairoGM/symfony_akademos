<div class="card">
    <div class="card-body">
        <div class="row">
            <div class="col-6">
                <h5 class="mb-0"><b>Nombre:</b> {{ item.nombre }}</h5>
            </div>
            <div class="col-6">
                {% if '1' == item.activo %}
                    <h5 class="mb-0"><b>Estado:</b> Habilitado</h5>
                {% else %}
                    <h5 class="mb-0"><b>Estado:</b> Deshabilitado</h5>
                {% endif %}
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <h5 class="mb-0"><b>Descripción:</b> {{ item.descripcion }}</h5>
            </div>
        </div>
    </div>
</div>
<div class="card">
    <div class="card-header">
        <h3 class="card-title font-weight-bold">
            <i class="ion ion-clipboard mr-1"></i>
            Funcionalidades
        </h3>
    </div>

    <div class="row">
        <div class="col-12">
            <table class="table table-bordered table-striped dataTable1">
                <thead class="table-custom-header">
                <tr>
                    <th>No.</th>
                    <th>Funcionalidad</th>
                    <th>Role Key</th>
                    <th>Activa</th>
                </tr>
                </thead>
                <tbody>
                {% for item in item.funcionalidades %}
                    <tr>
                        <td>{{ loop.index }}</td>
                        <td>{{ item.nombre | default('') }}</td>
                        <td>{{ item.roleKey | default('') }}</td>
                        <td>
                            {% if '1' == item.authorityEnabled %}
                                <span class="ms-status -active">Habilitado</span>
                            {% else %}
                                <span class="ms-status">Deshabilitado</span>
                            {% endif %}
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="card">
    <div class="card-header">
        <h3 class="card-title font-weight-bold">
            <i class="ion ion-clipboard mr-1"></i>
            Estructuras
        </h3>
    </div>

    <div class="row">
        <div class="col-12">
            <table class="table table-bordered table-striped dataTable1">
                <thead class="table-custom-header">
                <tr>
                    <th>No.</th>
                    <th>Estructura</th>
                </tr>
                </thead>
                <tbody>
                {% for item in estructuras %}
                    <tr>
                        <td>{{ loop.index }}</td>
                        <td>{{ item.estructura.nombre | default('') }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
