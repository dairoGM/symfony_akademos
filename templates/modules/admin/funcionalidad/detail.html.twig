<div class="row">
    <div class="col-6">
        <h5 class="mb-0"><b>Nombre:</b> {{ item.nombre }}</h5>    
    </div>   
 </div>   
  <div class="row">
    <div class="col-6">
        <h5 class="mb-0"><b>Módulo:</b> {{ item.modulo.nombre | default('') }}</h5>
    </div>    
 </div>
 <div class="row">   
    <div class="col-6">
        {% if '1' == item.authorityEnabled %}
            <h5 class="mb-0"><b>Estado Global:</b> Habilitado</h5>
        {% else %}
            <h5 class="mb-0"><b>Estado Global:</b> Deshabilitado</h5>
        {% endif %}
    </div>
    <div class="col-6">
        {% if '1' == item.activo %}
            <h5 class="mb-0"><b>Estado :</b> Habilitado</h5>
        {% else %}
            <h5 class="mb-0"><b>Estado :</b> Deshabilitado</h5>
        {% endif %}
    </div>
 </div>
<div class="row">
    <div class="col-12">
        <h5 class="mb-0"><b>Descripción:</b> {{ item.descripcion }}</h5>
    </div>
</div>

