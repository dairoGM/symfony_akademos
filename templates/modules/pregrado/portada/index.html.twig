                                        <div class="description-block border-right">
                                            <span class="description-percentage text-{{ item.color }}"> </i> {{ (item.total | default(1)  * 100 /  ciclo_corto_aprobados) | round(1, 'floor') }}%</span>
                                            <h5 class="description-header">{{ item.total | default(0) }}</h5>
                                            <span class="description-text">{{ item.nombre | default() }}</span>
                                        </div>
                                    </div>
                                {% endfor %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}

