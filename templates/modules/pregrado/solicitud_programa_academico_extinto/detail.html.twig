{# <div class="card"> #}
<div class="card-body">
    {% if format == 'col3' %}
        <h6 class="mb-0"><b><p
                        style="font-size: 20px; font-weight: bold; margin-top: 5px;">
                    Datos del programa académico</p>
            </b></h6>
    {% endif %}
    <div class="row">
        {% if format == 'col2' %}
            <div class="col-6">
                <h5 class="mb-0"><b>Tipo de programa
                        académico:</b> {{ item.tipoProgramaAcademico.nombre | default('') }}
                </h5>
                <h5 class="mb-0"><b>Tipo de organismo:</b> {{ item.tipoOrganismo.nombre | default('') }}</h5>
                <h5 class="mb-0"><b>Resolución: </b> <a target="_blank"
                                                        href="{{ app.request.getSchemeAndHttpHost() }}/uploads/solicitud_programa_academico/resolucion/{{ item.resolucion }}">{{ item.resolucion }}</a>
                </h5>
                <h5 class="mb-0"><b>Fecha de aprobación:</b> {{ item.fechaAprobacion | date('d/m/Y') }}</h5>
                <h5 class="mb-0"><b>Duración del Curso Diurno:</b> {{ item.duracionCursoDiurno | default('0') }} años
                </h5>
                <h5 class="mb-0"><b>Carta de aprobación: </b> <a target="_blank"
                                                                 href="{{ app.request.getSchemeAndHttpHost() }}/uploads/pregrado/carta_aprobacion/{{ item.cartaAprobacion }}">{{ item.cartaAprobacion }}</a>
                </h5>
            </div>
            <div class="col-6">
                <h5 class="mb-0"><b>Nombre del programa académico:</b> {{ item.nombre | default('') }}</h5>
                <h5 class="mb-0"><b>Organismo demandante:</b> {{ item.organismoDemandante.nombre | default('') }}</h5>
                <h5 class="mb-0"><b>Fundamentación: </b> <a target="_blank"
                                                            href="{{ app.request.getSchemeAndHttpHost() }}/uploads/solicitud_programa_academico/fundamentacion/{{ item.fundamentacion }}">{{ item.fundamentacion }}</a>
                </h5>
                <h5 class="mb-0"><b>Centro rector:</b> {{ item.centroRector.nombre | default('') }}</h5>
                <h5 class="mb-0"><b>Duración del Curso Por
                        Encuentro:</b> {{ item.duracionCursoPorEncuentro | default('0') }} años</h5>
                <h5 class="mb-0"><b>Comisión nacional:</b> {{ item.comisionNacional.nombre | default('') }} años</h5>
            </div>
        {% elseif format == 'col3' %}
            <div class="col-4">
                <h5 class="mb-0"><b>Tipo de programa
                        académico:</b> {{ item.tipoProgramaAcademico.nombre | default('') }}
                </h5>
                <h5 class="mb-0"><b>Organismo demandante:</b> {{ item.organismoDemandante.nombre | default('') }}</h5>
                <h5 class="mb-0"><b>Fecha de aprobación:</b> {{ item.fechaAprobacion | date('d/m/Y') }}</h5>
                <h5 class="mb-0"><b>Duración del Curso Diurno:</b> {{ item.duracionCursoDiurno | default('0') }} años
                </h5>
            </div>
            <div class="col-4">
                <h5 class="mb-0"><b>Nombre del programa académico:</b> {{ item.nombre | default('') }}</h5>
                <h5 class="mb-0"><b>Fundamentación: </b> <a target="_blank"
                                                            href="{{ app.request.getSchemeAndHttpHost() }}/uploads/solicitud_programa_academico/fundamentacion/{{ item.fundamentacion }}">{{ item.fundamentacion }}</a>
                </h5>
                <h5 class="mb-0"><b>Duración del Curso Por
                        Encuentro:</b> {{ item.duracionCursoPorEncuentro | default('0') }} años</h5>

                <h5 class="mb-0"><b>Estado del programa
                        académico:</b> {{ item.estadoProgramaAcademico.nombre | default('') }}</h5>
            </div>
            <div class="col-4">
                <h5 class="mb-0"><b>Tipo de organismo:</b> {{ item.tipoOrganismo.nombre | default('') }}</h5>
                <h5 class="mb-0"><b>Resolución: </b> <a target="_blank"
                                                        href="{{ app.request.getSchemeAndHttpHost() }}/uploads/solicitud_programa_academico/resolucion/{{ item.resolucion }}">{{ item.resolucion }}</a>
                </h5>
                <h5 class="mb-0"><b>Carta de aprobación: </b> <a target="_blank"
                                                                 href="{{ app.request.getSchemeAndHttpHost() }}/uploads/pregrado/carta_aprobacion/{{ item.cartaAprobacion }}">{{ item.cartaAprobacion }}</a>
                </h5>
                <h5 class="mb-0"><b>Centro rector:</b> {{ item.centroRector.nombre | default('') }}</h5>
            </div>
        {% endif %}
    </div>
</div>
<hr>
{% if format == 'col2' %}
    <h5 class="mb-0"><b>Extinciones del programa</b></h5>
    <div class="card-body">
        <table class="table table-bordered table-striped dataTable">
            <thead class="table-custom-header">
            <tr>
                <th>No.</th>
                <th>Curso académico</th>
                <th>Fecha de eliminación</th>
                <th>Fundamentación</th>
                <th>Dictamen de aprobación</th>
            </tr>
            </thead>
            <tbody>
            {% for item in extenciones %}
                <tr>
                    <td width="1%">{{ loop.index }}</td>
                    <td>{{ item.cursoAcademico.nombre | default('') }}</td>
                    <td>{{ item.creado | date('d-m-Y') }}</td>
                    <td>
                        <a title="Descargar fundamentación" target="_blank" class="btn btn-outline-primary"
                           href="{{ app.request.getSchemeAndHttpHost() }}/uploads/pregrado/programas_aprobados/fundamentacion/{{ item.solicitudProgramaAcademico.fundamentacion }}">
                            <i
                                    class="fa fa-file-download"></i>
                        </a>
                    </td>
                    <td>
                        <a title="Descargar dictámen" target="_blank" class="btn btn-outline-primary"
                           href="{{ app.request.getSchemeAndHttpHost() }}/uploads/pregrado/programas_aprobados/dictamenAprobacion/{{ item.dictamenAprobacion }}">
                            <i
                                    class="fa fa-file-download"></i>
                        </a>
                    </td>

                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

{% endif %}

